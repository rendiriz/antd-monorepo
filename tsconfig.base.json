{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@antd-monorepo/next/landing/components": [
        "libs/next/landing/components/src/index.ts"
      ],
      "@antd-monorepo/next/landing/components/server": [
        "libs/next/landing/components/src/server.ts"
      ],
      "@antd-monorepo/next/landing/utils": [
        "libs/next/landing/utils/src/index.ts"
      ],
      "@antd-monorepo/next/shared/components": [
        "libs/next/shared/components/src/index.ts"
      ],
      "@antd-monorepo/next/shared/components/server": [
        "libs/next/shared/components/src/server.ts"
      ],
      "@antd-monorepo/next/shared/utils": [
        "libs/next/shared/utils/src/index.ts"
      ],
      "@antd-monorepo/next/web-apps/components": [
        "libs/next/web-apps/components/src/index.ts"
      ],
      "@antd-monorepo/next/web-apps/components/server": [
        "libs/next/web-apps/components/src/server.ts"
      ],
      "@antd-monorepo/next/web-apps/utils": [
        "libs/next/web-apps/utils/src/index.ts"
      ],
      "@antd-monorepo/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
